{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["src/styles/*"],
    }
  }
}
