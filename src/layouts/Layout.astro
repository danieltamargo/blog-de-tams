---
import BackgroundPattern from '../components/BackgroundPattern.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions, fade } from 'astro:transitions';
import { Image } from 'astro:assets';
import ProfilePic from "@assets/daniel-tamargo.jpeg";
import SocialIconLink from '@components/SocialIconLink.astro';

interface Props {
	title: string;
	showInfo: boolean;
}

const { title, showInfo } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A modern developer blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-h-screen bg-gray-50 flex flex-col">
		<BackgroundPattern transition:animate={fade({ duration: '0' })} />
		<Navigation transition:animate={fade({ duration: '0' })} />
		<!-- Personal card aside -->
		<div class="flex gap-6 flex-wrap max-w-7xl w-full py-12 px-4 mx-auto">
			{showInfo && (
				<aside 
				class="relative z-10 flex-1 flex flex-wrap gap-4 items-center h-fit backdrop-blur-sm rounded-xl p-6 bg-white/80 shadow-sm border border-gray-100 hover:shadow-md transition-shadow" 
				transition:animate={fade({ duration: '0' })}
				>
					<div class="relative min-w-64 max-w-96 max-h-56 mb-4">
						<Image
						src={ProfilePic} 
						alt="Avatar" 
						class="h-full w-full rounded-2xl mx-auto mb-4 shadow-sm object-cover" 
						/>
						<h2 class="absolute bottom-0 right-0 bg-gray-800 text-white p-2 text-xl font-bold rounded-tl-2xl rounded-br-2xl">
							Daniel Tamargo
						</h2>
					</div>
	
