<style>
  #toggle-card-dani {
    display: none;
    transition: transform 0.4s ease-in-out, rotate 0.4s ease-in-out, top 0.4s ease-in-out;
  }

  @media screen and (max-width: 1279px) {
    #toggle-card-dani {
      display: block;
      transform: translateY(-150%);
    }
    
    #card-dani.show #toggle-card-dani {
      transform: translateY(-80%) rotate(180deg);
    }
    
    #card-dani {
      max-height: 0;
      transition: max-height 0.2s ease-in-out;
    }
    
    #card-dani.show {
      max-height: 1000px;
    }
    
    #card-dani > aside {
      transition: transform 0.4s ease-in-out;
    }

    #card-dani.show > aside {
      transform: translateY(0);
    }
    
    #card-dani > aside {
      transform: translateY(-200%);
    }
  }
</style>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const toggleCardDani = document.getElementById('toggle-card-dani')
    
    // if button exists and has no event listener, add it
    if (!toggleCardDani) return;
    if (toggleCardDani.hasAttribute('data-event-listener')) return;
    
    toggleCardDani.setAttribute('data-event-listener', 'true');
    toggleCardDani.addEventListener('click', () => {
      console.log('toggle-card-dani');
      const cardDani = document.getElementById('card-dani');
      cardDani.classList.toggle('show');
      document.cookie = 'show-card-dani=' + (cardDani.classList.contains('show') ? 'true' : 'false') + '; max-age=' + 60 * 60 * 24 * 365;
    });
  });
</script>