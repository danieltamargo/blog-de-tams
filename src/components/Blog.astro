---
import { format } from 'date-fns';

interface Props {
  prevPost: {
    slug: string;
    data: {
      title: string;
    };
  },
  nextPost: {
    slug: string;
    data: {
      title: string;
    };
  },
  frontmatter: {
    title: string;
    date: string;
    tags: string[];
  },
  animation: {
    forwards: {
      old: {
        name: string;
        duration: string;
        easing: string;
        direction: string;
      },
      new: {
        name: string;
        duration: string;
        easing: string;
      },
    },
    backwards: {
      old: {
        name: string;
        duration: string;
        easing: string;
        direction: string;
      },
      new: {
        name: string;
        duration: string;
        easing: string;
      },
    },
  };
}

const { prevPost, nextPost, frontmatter, animation } = Astro.props;
---

<article class="max-w-4xl mx-auto px-4 py-12" transition:animate={animation}>
  <div class="bg-white/80 backdrop-blur-sm rounded-xl p-8 shadow-sm border border-gray-100">
    <nav class="flex justify-between mb-8 text-sm">
      {prevPost && (
        <a 
          href={`/blog/${prevPost.slug}`}
          rel="prev"
          class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"/>
          </svg>
          <span class="hidden sm:inline">Previous:</span>
          <span class="font-medium truncate max-w-[200px]">{prevPost.data.title}</span>
        </a>
      )}
      {!prevPost && <div></div>}
      
      {nextPost && (
        <a 
          href={`/blog/${nextPost.slug}`}
          rel="next"
          class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
        >
          <span class="hidden sm:inline">Next:</span>
          <span class="font-medium truncate max-w-[200px]">{nextPost.data.title}</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"/>
          </svg>
        </a>
      )}
      {!nextPost && <div></div>}
    </nav>

    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600">
        {frontmatter.title}
      </h1>
      <div class="text-gray-500">
        <time datetime={frontmatter.date}>
          {format(new Date(frontmatter.date), 'MMMM d, yyyy')}
        </time>
        {frontmatter.tags && (
          <div class="mt-2 flex gap-2 flex-wrap">
            {frontmatter.tags.map((tag: string) => (
              <span class="bg-gray-100/80 backdrop-blur-sm text-gray-700 px-3 py-1 rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
    <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-blue-600">
      <slot />
    </div>
  </div>
</article>

<script>
import { navigate } from 'astro:transitions/client';

document.addEventListener("astro:page-load", () => {
  const nextLink = document.querySelector<HTMLLinkElement>('a[rel="next"]');
  const prevLink = document.querySelector<HTMLLinkElement>('a[rel="prev"]');
  
  nextLink?.addEventListener('click', (event) => {
    event.preventDefault();
    document.cookie = 'blog-navigation-direction=forward;max-age=60';
    navigate(nextLink.href);
  });
  
  prevLink?.addEventListener('click', (event) => {
    event.preventDefault();
    document.cookie = 'blog-navigation-direction=backward;max-age=60';
    navigate(prevLink.href);
  });
})
</script>
