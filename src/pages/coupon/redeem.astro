---
import Layout from '@layouts/Layout.astro';

---
<Layout title="Blogsky" showInfo={false}>
  <div class="space-y-4">
    <div class="relative overflow-hidden py-8 mb-12 screen-block blob-hoverable">
      <div class="flex justify-between gap-8 p-4">
        <div class="w-64">

        </div>
        <div class="flex-1">
          <h1 class="text-4xl font-bold mb-4 text-gray-600">Canjear cupón</h1>
          <p class="text-lg">Introduce el código de tu cupón para canjearlo.</p>
          <form id="coupon-redeem-form" class="mt-8">
            <label for="coupon" class="block text-lg font-semibold">Código del cupón</label>
            <input type="text" id="coupon" name="coupon" class="w-full mt-2 p-2 border border-gray-300 rounded-md" />
            <button type="submit" class="mt-4 bg-blue-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-600 transition-colors">Canjear cupón</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>
<script type="module">
  console.log('Hello from the redeem page!');
  const form = document.getElementById("coupon-redeem-form");
  form.addEventListener("submit", (e) => {
    e.preventDefault();
    const coupon = form.querySelector<HTMLInputElement>("#coupon").value;
    window.CustomNotificationManager.addNotification({
      type: "success",
      title: "Cupón canjeado",
      message: `El cupón ${coupon} ha sido canjeado correctamente.`,
    });
  });
</script>