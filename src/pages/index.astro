---
import Layout from '../layouts/Layout.astro';
import CategoryCarousel from '../components/CategoryCarousel.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';

const posts = await getCollection('blog');
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Developer Blog">
  <main class="px-4 flex-1">
    <CategoryCarousel />
    
    <div class="space-y-8">
      {posts.map((post) => (
        <article class="bg-white/80 backdrop-blur-sm rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h2 class="text-3xl font-bold mb-2">
            <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
              {post.data.title}
            </a>
          </h2>
          <div class="text-gray-500 mb-4">
            <time datetime={post.data.date}>
              {format(new Date(post.data.date), 'MMMM d, yyyy')}
            </time>
          </div>
          <p class="text-gray-700 mb-4">{post.data.description}</p>
          {post.data.tags && (
            <div class="flex gap-2 flex-wrap">
              {post.data.tags.map((tag: string) => (
                <span class="bg-gray-100/80 backdrop-blur-sm text-gray-700 px-3 py-1 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </article>
      ))}
    </div>
  </main>
</Layout>